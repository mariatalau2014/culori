<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Joc Ma»ôinu»õƒÉ - EvitƒÉ Obstacolele</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            overflow: hidden;
        }

        .game-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        h1 {
            color: #fff;
            text-align: center;
            margin-bottom: 20px;
            font-size: 2rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .game-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            color: #fff;
            font-size: 1.2rem;
        }

        .score, .lives {
            background: rgba(255, 255, 255, 0.1);
            padding: 10px 20px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        canvas {
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
            display: block;
            background: #2d3436;
        }

        .controls {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        .btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 15px 40px;
            font-size: 1.2rem;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .instructions {
            color: #fff;
            text-align: center;
            margin-top: 15px;
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .mobile-controls {
            display: none;
            gap: 10px;
            margin-top: 15px;
        }

        .mobile-btn {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            font-size: 1.5rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .mobile-btn:active {
            background: rgba(255, 255, 255, 0.4);
            transform: scale(0.95);
        }

        @media (max-width: 768px) {
            .mobile-controls {
                display: flex;
            }

            h1 {
                font-size: 1.5rem;
            }

            .game-container {
                padding: 20px;
            }
        }

        .game-over {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.95);
            padding: 40px;
            border-radius: 20px;
            text-align: center;
            color: white;
            display: none;
            z-index: 100;
            border: 2px solid #e74c3c;
        }

        .game-over h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #e74c3c;
        }

        .game-over p {
            font-size: 1.3rem;
            margin-bottom: 30px;
        }

        .start-message {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.8);
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            color: white;
            font-size: 1.2rem;
            display: block;
        }
    </style>
</head>
<body>
    <div class="game-container" style="position: relative;">
        <h1>üöó Joc Ma»ôinu»õƒÉ</h1>
        <div class="game-info">
            <div class="score">Scor: <span id="scoreValue">0</span></div>
            <div class="lives">Vie»õi: <span id="livesValue">3</span> ‚ù§Ô∏è</div>
        </div>
        <div style="position: relative;">
            <canvas id="gameCanvas" width="400" height="600"></canvas>
            <div class="start-message" id="startMessage">
                <p>ApasƒÉ <strong>START JOC</strong> pentru a √Æncepe!</p>
                <p style="margin-top: 10px; font-size: 0.9rem; opacity: 0.8;">Folose»ôte ‚Üê ‚Üí sau butoanele</p>
            </div>
        </div>
        <div class="controls">
            <button class="btn" id="startBtn">üéÆ Start Joc</button>
            <div class="mobile-controls">
                <button class="mobile-btn" id="leftBtn">‚óÄ</button>
                <button class="mobile-btn" id="rightBtn">‚ñ∂</button>
            </div>
            <div class="instructions">
                Folose»ôte sƒÉge»õile ‚Üê ‚Üí sau butoanele pentru a conduce
            </div>
        </div>
    </div>

    <div class="game-over" id="gameOver">
        <h2>üí• Game Over!</h2>
        <p>Scor Final: <span id="finalScore">0</span></p>
        <button class="btn" id="restartBtn">üîÑ JoacƒÉ Din Nou</button>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreElement = document.getElementById('scoreValue');
        const livesElement = document.getElementById('livesValue');
        const startBtn = document.getElementById('startBtn');
        const restartBtn = document.getElementById('restartBtn');
        const gameOverDiv = document.getElementById('gameOver');
        const finalScoreElement = document.getElementById('finalScore');
        const leftBtn = document.getElementById('leftBtn');
        const rightBtn = document.getElementById('rightBtn');
        const startMessage = document.getElementById('startMessage');

        let gameRunning = false;
        let score = 0;
        let lives = 3;
        let animationId;
        let speed = 3;
        let roadOffset = 0;

        const car = {
            x: canvas.width / 2 - 25,
            y: canvas.height - 120,
            width: 50,
            height: 90,
            speed: 6,
            color: '#e74c3c'
        };

        let obstacles = [];
        let keys = {
            left: false,
            right: false
        };

        function drawCar() {
            // Corpul ma»ôinii - ro»ôu strƒÉlucitor
            ctx.fillStyle = '#e74c3c';
            ctx.fillRect(car.x, car.y, car.width, car.height);
            
            // BordurƒÉ neagrƒÉ pentru contrast
            ctx.strokeStyle = '#000';
            ctx.lineWidth = 2;
            ctx.strokeRect(car.x, car.y, car.width, car.height);
            
            // Parbriz - albastru deschis
            ctx.fillStyle = '#3498db';
            ctx.fillRect(car.x + 8, car.y + 15, car.width - 16, 25);
            
            // Geam spate
            ctx.fillStyle = '#2980b9';
            ctx.fillRect(car.x + 8, car.y + 55, car.width - 16, 15);
            
            // Ro»õi - negre
            ctx.fillStyle = '#2c3e50';
            ctx.fillRect(car.x - 8, car.y + 15, 8, 20);
            ctx.fillRect(car.x + car.width, car.y + 15, 8, 20);
            ctx.fillRect(car.x - 8, car.y + 55, 8, 20);
            ctx.fillRect(car.x + car.width, car.y + 55, 8, 20);
            
            // Faruri - galbene strƒÉlucitoare
            ctx.fillStyle = '#f1c40f';
            ctx.beginPath();
            ctx.arc(car.x + 12, car.y + 5, 6, 0, Math.PI * 2);
            ctx.arc(car.x + car.width - 12, car.y + 5, 6, 0, Math.PI * 2);
            ctx.fill();
            
            // Stopuri - ro»ôii
            ctx.fillStyle = '#c0392b';
            ctx.fillRect(car.x + 8, car.y + car.height - 8, 12, 6);
            ctx.fillRect(car.x + car.width - 20, car.y + car.height - 8, 12, 6);
            
            // Detalii capotƒÉ
            ctx.fillStyle = '#c0392b';
            ctx.fillRect(car.x + 20, car.y + 30, 10, 20);
        }

        function createObstacle() {
            const width = Math.random() * 60 + 50;
            const x = Math.random() * (canvas.width - width - 50) + 25;
            const colors = ['#3498db', '#9b59b6', '#27ae60', '#f39c12', '#16a085', '#e67e22'];
            const color = colors[Math.floor(Math.random() * colors.length)];
            
            obstacles.push({
                x: x,
                y: -60,
                width: width,
                height: 50,
                color: color,
                speed: speed
            });
        }

        function drawObstacles() {
            obstacles.forEach(obstacle => {
                // Corp obstacol
                ctx.fillStyle = obstacle.color;
                ctx.fillRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
                
                // BordurƒÉ
                ctx.strokeStyle = '#000';
                ctx.lineWidth = 3;
                ctx.strokeRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
                
                // Detalii
                ctx.fillStyle = 'rgba(255, 255, 255, 0.4)';
                ctx.fillRect(obstacle.x + 8, obstacle.y + 8, obstacle.width - 16, obstacle.height - 16);
                
                // X pe obstacol
                ctx.strokeStyle = '#000';
                ctx.lineWidth = 3;
                ctx.beginPath();
                ctx.moveTo(obstacle.x + 15, obstacle.y + 15);
                ctx.lineTo(obstacle.x + obstacle.width - 15, obstacle.y + obstacle.height - 15);
                ctx.moveTo(obstacle.x + obstacle.width - 15, obstacle.y + 15);
                ctx.lineTo(obstacle.x + 15, obstacle.y + obstacle.height - 15);
                ctx.stroke();
            });
        }

        function drawRoad() {
            // Asfalt
            ctx.fillStyle = '#34495e';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Linii laterale - galbene
            ctx.fillStyle = '#f1c40f';
            ctx.fillRect(10, 0, 15, canvas.height);
            ctx.fillRect(canvas.width - 25, 0, 15, canvas.height);
            
            // Borduri laterale - ro»ôu »ôi alb
            const stripeHeight = 30;
            for (let i = -stripeHeight; i < canvas.height + stripeHeight; i += stripeHeight * 2) {
                ctx.fillStyle = '#e74c3c';
                ctx.fillRect(0, i + roadOffset % (stripeHeight * 2), 10, stripeHeight);
                ctx.fillRect(canvas.width - 10, i + roadOffset % (stripeHeight * 2), 10, stripeHeight);
                
                ctx.fillStyle = '#fff';
                ctx.fillRect(0, i + stripeHeight + roadOffset % (stripeHeight * 2), 10, stripeHeight);
                ctx.fillRect(canvas.width - 10, i + stripeHeight + roadOffset % (stripeHeight * 2), 10, stripeHeight);
            }
            
            // Linie medianƒÉ - albƒÉ punctatƒÉ
            ctx.fillStyle = '#fff';
            const dashHeight = 40;
            const gapHeight = 30;
            for (let i = -dashHeight; i < canvas.height + dashHeight; i += dashHeight + gapHeight) {
                ctx.fillRect(canvas.width / 2 - 4, i + roadOffset % (dashHeight + gapHeight), 8, dashHeight);
            }
            
            roadOffset += speed;
        }

        function checkCollision() {
            for (let obstacle of obstacles) {
                if (
                    car.x < obstacle.x + obstacle.width &&
                    car.x + car.width > obstacle.x &&
                    car.y < obstacle.y + obstacle.height &&
                    car.y + car.height > obstacle.y
                ) {
                    return true;
                }
            }
            return false;
        }

        function update() {
            if (!gameRunning) return;

            // Mi»ôcare ma»ôinƒÉ
            if (keys.left && car.x > 30) {
                car.x -= car.speed;
            }
            if (keys.right && car.x < canvas.width - car.width - 30) {
                car.x += car.speed;
            }

            // Creare obstacole
            if (Math.random() < 0.025) {
                createObstacle();
            }

            // Actualizare obstacole
            obstacles.forEach((obstacle, index) => {
                obstacle.y += obstacle.speed;
                
                if (obstacle.y > canvas.height) {
                    obstacles.splice(index, 1);
                    score += 10;
                    scoreElement.textContent = score;
                    
                    if (score % 100 === 0) {
                        speed += 0.5;
                    }
                }
            });

            // Verificare coliziune
            if (checkCollision()) {
                lives--;
                livesElement.textContent = lives + ' ‚ù§Ô∏è';
                obstacles = [];
                
                // Efect vizual coliziune
                canvas.style.opacity = '0.5';
                setTimeout(() => {
                    canvas.style.opacity = '1';
                }, 200);
                
                if (lives <= 0) {
                    endGame();
                }
            }

            // Desenare
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            drawRoad();
            drawObstacles();
            drawCar();

            animationId = requestAnimationFrame(update);
        }

        function initGame() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            drawRoad();
            drawCar();
        }

        function startGame() {
            gameRunning = true;
            score = 0;
            lives = 3;
            speed = 3;
            obstacles = [];
            car.x = canvas.width / 2 - 25;
            roadOffset = 0;
            
            scoreElement.textContent = score;
            livesElement.textContent = lives + ' ‚ù§Ô∏è';
            gameOverDiv.style.display = 'none';
            startMessage.style.display = 'none';
            startBtn.textContent = 'üéÆ Joc √Æn DesfƒÉ»ôurare';
            startBtn.disabled = true;
            
            update();
        }

        function endGame() {
            gameRunning = false;
            cancelAnimationFrame(animationId);
            finalScoreElement.textContent = score;
            gameOverDiv.style.display = 'block';
            startBtn.textContent = 'üéÆ Start Joc';
            startBtn.disabled = false;
        }

        // TastaturƒÉ
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft' || e.key === 'a' || e.key === 'A') {
                keys.left = true;
            }
            if (e.key === 'ArrowRight' || e.key === 'd' || e.key === 'D') {
                keys.right = true;
            }
            if (e.key === ' ' && !gameRunning) {
                startGame();
            }
        });

        document.addEventListener('keyup', (e) => {
            if (e.key === 'ArrowLeft' || e.key === 'a' || e.key === 'A') {
                keys.left = false;
            }
            if (e.key === 'ArrowRight' || e.key === 'd' || e.key === 'D') {
                keys.right = false;
            }
        });

        // Butoane
        startBtn.addEventListener('click', startGame);
        restartBtn.addEventListener('click', startGame);

        // Butoane mobile
        function setupMobileBtn(btn, key) {
            btn.addEventListener('touchstart', (e) => {
                e.preventDefault();
                keys[key] = true;
            });

            btn.addEventListener('touchend', (e) => {
                e.preventDefault();
                keys[key] = false;
            });

            btn.addEventListener('mousedown', () => {
                keys[key] = true;
            });

            btn.addEventListener('mouseup', () => {
                keys[key] = false;
            });

            btn.addEventListener('mouseleave', () => {
                keys[key] = false;
            });
        }

        setupMobileBtn(leftBtn, 'left');
        setupMobileBtn(rightBtn, 'right');

        // Ini»õializare
        initGame();
    </script>
</body>
</html>

